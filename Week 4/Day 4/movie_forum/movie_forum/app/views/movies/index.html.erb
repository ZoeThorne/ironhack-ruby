<p id="notice"><%= notice %></p>

<h1>All Movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Poster</th>
      <th>Year</th>
      <th>Synopsis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to "#{movie.title}", movie %></td>
        <td><img src="<%= movie.poster %>" style="height:50px"></td>
        <td><%= movie.year %></td>
        <td><%= movie.synopsis %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path %>
