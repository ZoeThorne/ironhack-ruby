<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Poster</th>
      <th>Year</th>
      <th>Synopsis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><img src="<%= movie.poster %>" style="height:50px"></td>
        <td><%= movie.year %></td>
        <td><%= movie.synopsis %></td>
        <td><%= link_to 'View', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Remove', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', movies_path %>